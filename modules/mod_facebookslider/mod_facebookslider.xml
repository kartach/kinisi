<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>Facebook Widget Slider</name>
	<author>Alonzo Weatherby</author>
	<creationDate>June 2013</creationDate>
	<copyright>Copyright (C)2013 forkliftcertification.us</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>widgets@forkliftcertification.us</authorEmail>
	<authorUrl>www.forkliftcertification.us</authorUrl>
	<version>1.1</version>
	<description>Thanks for installing Facebook Widget Slider</description>
	<files>
		<folder>assets</folder>
		<folder>tmpl</folder>
		<filename module="mod_facebookslider">mod_facebookslider.php</filename>
		<filename>index.html</filename>
		<filename>mod_facebookslider.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_facebookslider.ini</language>
		<language tag="en-GB">en-GB.mod_facebookslider.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="fb_id"
					type="text"
					default="104958162837"
					label="MOD_FACEBOOK_SLIDER_ID"
					description="MOD_FACEBOOK_SLIDER_ID_DESC" />
				<field
					name="stream"
					type="radio"
					class="btn-group"
					default="true"
					label="MOD_FACEBOOK_SLIDER_STREAM"
					description="MOD_FACEBOOK_SLIDER_STREAM_DESC">
					<option value="true">Yes</option>
					<option value="false">No</option>
				</field>
				<field 
					name="margintop"
					type="text"
					default="100"
					label="MOD_FACEBOOK_SLIDER_MARGIN" 
					description="MOD_FACEBOOK_SLIDER_MARGIN_DESC" />
				<field 
					name="fbwidth"
					type="text"
					default="290"
					label="MOD_FACEBOOK_SLIDER_WIDTH" 
					description="MOD_FACEBOOK_SLIDER_WIDTH_DESC" />
				<field 
					name="fbheight"
					type="text"
					default="350"
					label="MOD_FACEBOOK_SLIDER_HEIGHT"
					description="MOD_FACEBOOK_SLIDER_HEIGHT_DESC" />

				<field
					name="header"
					type="radio"
					class="btn-group"
					default="true"
					label="Dispaly Header"
					description="Dispaly Header">
					<option value="true">Yes</option>
					<option value="false">No</option>
				</field>
				


				<field
					name="position"
					type="radio"
					class="btn-group"
					default="left"
					label="Position"
					description="Position">
					<option value="left">Left</option>
					<option value="right">Right</option>
				</field>	
                 <field type="spacer" name="myspacer" label="Note: If you are using Joomla 2.5 or your site not loading jQuery yet - You might like to put that option as Yes to load jQuery" />	
				<field
					name="loadjquery"
					type="radio"
					class="btn-group"
					default="false"
					label="MOD_FACEBOOK_SLIDER_JQUERY"
					description="MOD_FACEBOOK_SLIDER_JQUERY_DESC">
					<option value="true">Yes</option>
					<option value="false">No</option>
				</field>	
			</fieldset>

			<fieldset name="advanced">
				<field
					name="moduleclass_sfx"
					type="text"
					default=""
					label="MOD_FACEBOOK_SLIDER_MODULE_CLASS"
					description="MOD_FACEBOOK_SLIDER_MODULE_CLASS_DESC" />
				
				
			</fieldset>
		</fields>
	</config>
</extension>
